<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color2">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="明星百科"
                android:textColor="@color/color1" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_close" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/loadingContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/color2"
            android:visibility="gone"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:alpha="0.5"
                    android:src="@drawable/shape_loading_circle"
                    />
                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:alpha="0.5"
                    android:src="@drawable/shape_loading_circle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="63dp"
                    android:textSize="14sp"
                    android:textColor="@color/color3"
                    android:text="@string/loading"
                    />

            </FrameLayout>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/errorContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/color2"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:alpha="0.5"
                    android:src="@mipmap/pic_error"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:textSize="14sp"
                    android:textColor="@color/color3"
                    android:gravity="center"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/errorDesc"
                    />

            </LinearLayout>

        </RelativeLayout>


        <cn.com.videopls.pub.VideoProgramView
            android:id="@+id/programView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/disConnectWifiContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@color/color2"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color3"
                android:text="@string/disconnectWifiDesc"
                android:drawableTop="@mipmap/pic_disconnect"
                android:drawablePadding="11dp"
                />
            <TextView
                android:id="@+id/tvRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:layout_marginTop="22dp"
                android:text="@string/clickAndRetry"
                android:background="@drawable/bg_disconnect_wifi"
                android:textColor="@color/color3"
                />
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>